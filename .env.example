# Environment Configuration
# Copy this file to .env and configure for your local environment
# .env is gitignored and should NEVER be committed

# =============================================================================
# SECURITY & ETHICS
# =============================================================================

# ALLOW_TRAINING controls whether ML model training is enabled
# Set to 'true' ONLY after obtaining supervisor and IRB approval
# Default: false (testing/development mode only)
ALLOW_TRAINING=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=8000

# =============================================================================
# DATABASE
# =============================================================================

# Path to SQLite database file
DB_PATH=./scripts/output/db.sqlite

# =============================================================================
# NOTES
# =============================================================================
# - Keep all paths relative to project root
# - Never commit .env to version control
# - All ML/training features require ethics approval
# - Review IRB requirements before enabling ALLOW_TRAINING
